public static int[] ArraySum(int[] array1, int[] array2)
        {
           int arrayLength = (array1.Length <= array2.Length) ? array2.Length : array1.Length;
           int[] arraySum = new int[arrayLength];
            for(int i = 0; i < ((array1.Length < array2.Length) ? array1.Length : array2.Length); i++)
                arraySum[i] = array1[i] + array2[i];
            for(int i = ((array1.Length < array2.Length) ? array1.Length : array2.Length); i < arrayLength; i++)
            {
                arraySum[i] = (array1.Length < array2.Length) ? array2[i] : array1[i];
            }
            return arraySum;
        }
